{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es2019"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2016",
    "skipLibCheck": true,
    "baseUrl": "src",
    "strictNullChecks": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ]
}